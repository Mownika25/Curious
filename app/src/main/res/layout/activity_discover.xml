<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="16dp"
            android:text="@string/discover_your_curiosity"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    </com.google.android.material.appbar.AppBarLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="30dp"
          android:visibility="invisible"
          android:layout_below="@+id/titlebar"
          android:id="@+id/results">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/joyous"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          tools:ignore="InvalidId,MissingConstraints,UnknownId">

          <ProgressBar
              android:id="@+id/progress_horizontal1"
              style="@android:style/Widget.ProgressBar.Horizontal"
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:layout_weight="2.5"
              android:progress="60"
              android:background="#FFFFFF"
              tools:ignore="MissingConstraints"
              android:progressDrawable="@drawable/progress11"
              android:state_selected="true"
              >

          </ProgressBar>
          <TextView
              android:id="@+id/text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/cardview_light_background"
              android:layout_weight="1.5"
              android:hint="60%"
              ></TextView>
      </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/deprivation"
              android:layout_marginTop="20dp"
              android:orientation="horizontal"

              tools:ignore="InvalidId,MissingConstraints,UnknownId">

              <ProgressBar
                  android:id="@+id/progress_horizontal2"
                  style="@android:style/Widget.ProgressBar.Horizontal"
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_weight="2.5"
                  android:progress="60"
                  android:background="#FFFFFF"
                  tools:ignore="MissingConstraints"
                  android:progressDrawable="@drawable/progress12"
                  android:state_selected="true"
                  >

              </ProgressBar>
              <TextView
                  android:id="@+id/text2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/cardview_light_background"
                  android:layout_weight="1.5"
                  android:hint="60%"
                  ></TextView>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/Thrill"
              android:orientation="horizontal"
              android:layout_marginTop="20dp"
              tools:ignore="InvalidId,MissingConstraints,UnknownId">

              <ProgressBar
                  android:id="@+id/progress_horizontal3"
                  style="@android:style/Widget.ProgressBar.Horizontal"
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_weight="2.5"
                  android:progress="60"
                  android:background="#FFFFFF"
                  tools:ignore="MissingConstraints"
                  android:progressDrawable="@drawable/progress13"
                  android:state_selected="true"
                  >

              </ProgressBar>
              <TextView
                  android:id="@+id/text3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/cardview_light_background"
                  android:layout_weight="1.5"
                  android:hint="60%"
                  ></TextView>
          </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/Social"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          tools:ignore="InvalidId,MissingConstraints,UnknownId">

          <ProgressBar
              android:id="@+id/progress_horizontal4"
              style="@android:style/Widget.ProgressBar.Horizontal"
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:layout_weight="2.5"
              android:progress="60"
              android:background="#FFFFFF"
              tools:ignore="MissingConstraints"
              android:progressDrawable="@drawable/progress14"
              android:state_selected="true"
              >

          </ProgressBar>
          <TextView
              android:id="@+id/text4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/cardview_light_background"
              android:layout_weight="1.5"
              android:hint="60%"
              ></TextView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/Stress"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          tools:ignore="InvalidId,MissingConstraints,UnknownId">

          <ProgressBar
              android:id="@+id/progress_horizontal5"
              style="@android:style/Widget.ProgressBar.Horizontal"
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:layout_weight="2.5"
              android:progress="60"
              android:background="#FFFFFF"
              tools:ignore="MissingConstraints"
              android:progressDrawable="@drawable/progress15"
              android:state_selected="true"
              >

          </ProgressBar>
          <TextView
              android:id="@+id/text5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/cardview_light_background"
              android:layout_weight="1.5"
              android:hint="60%"
              ></TextView>
      </LinearLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="type"
              android:textColor="@color/cardview_light_background"
              android:id="@+id/profile2"

              android:layout_gravity="center_horizontal">


          </TextView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="xyz"
              android:textColor="@color/cardview_light_background"
              android:id="@+id/profile"
              android:layout_marginTop="20dp"
              android:textSize="35sp"
              android:layout_gravity="center_horizontal">


          </TextView>
      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
          android:id="@+id/questions"
        android:orientation="vertical"
        android:layout_marginBottom="-85dp">

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="8dp">





        </RelativeLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="#EFF1F3"
            android:padding="10dp"
            android:text="which thing is alive"
            android:textColor="#000000"

            android:textSize="20sp"
            android:textStyle="normal|bold"
            app:fontFamily="@font/amarante" />

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/choice1"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"

            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"


            app:cardBackgroundColor="#2C5D83"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textinc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/discover_your_curiosity"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/choice2"
            android:layout_height="100dp"
            android:layout_weight="1"

            android:layout_centerHorizontal="true"
            android:padding="8dp"
            app:cardCornerRadius="20dp"


            app:cardBackgroundColor="#2C5D83"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/textinc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover_your_curiosity"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/choice3"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"


            app:cardBackgroundColor="#2C5D83"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/textinc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover_your_curiosity"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/choice4"
            android:layout_height="100dp"
           android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2C5D83"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/textinc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover_your_curiosity"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/choice5"
            android:layout_marginRight="50dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2C5D83"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/textinc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover_your_curiosity"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
</LinearLayout>




        <RelativeLayout
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="8dp">


            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="#B71C1C"
                android:padding="8dp"

                android:paddingLeft="100dp"
                android:text="GO Back"
                android:textColor="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="#B71C1C"
                android:textColor="#fff"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="24dp"
                android:id="@+id/next"/>
        </RelativeLayout>


    </LinearLayout>


  </RelativeLayout>

</ScrollView>